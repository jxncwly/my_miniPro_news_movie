<!--pages/movieDetail/movieDetail.wxml-->

<view class='detailContainer'>
  <image class='movieImg' src="{{movieObj.images.large}}"></image>
  <text class='movieName'>{{movieObj.original_title}}</text>
  <view class='movieInfo'>
    <text>评分: {{movieObj.rating.average}}</text>
    <text>导演: {{movieObj.directors[0].name}}</text>
    <text>主演: {{movieObj.casts[0].name}} {{movieObj.casts[1].name}} {{movieObj.casts[2].name}}</text>
  </view>
  <button>我要观影</button>
</view>


