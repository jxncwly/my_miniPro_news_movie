<!--template/movieTemplate/movieTemplate.wxml-->

<template name='movie'>
  <!-- <navigator url='/pages/movieDetail/movieDetail?id=1'> -->
    <view class='movieContainer'>
      <image class='movieImg' src='{{images.large}}'></image>
      <view class='movieContent'>
        <text class='movieName'>{{original_title}}</text>
        <text class='movieDate'>年份: {{year}}</text>
        <text class='movieDirector'>导演：{{directors[0].name}}</text>
      </view>
      <text class='movieRating'>{{rating.average}}</text>
    </view>
  <!-- </navigator> -->
</template>