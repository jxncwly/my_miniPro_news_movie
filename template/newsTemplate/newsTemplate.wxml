<!--pages/newsTemplate/newsTemplate.wxml-->

<!-- 新闻模板 -->
<template name="news">
  <view class='tmpContainer'>
    <view class='avatar_date'>
      <image src='{{avatar}}'></image>
      <text>{{date}}</text>
    </view>
    <text class='title'>{{title}}</text>
    <image class='newsImg' src='{{headImgSrc}}'></image>
    <text class='newsText'>{{detail_content}}</text>
    <view class='love_attention'>
      <image src='{{detail_love_image1}}'></image>
      <text>{{love_count}}</text>
      <image src='{{detail_love_image2}}'></image>
      <text>{{attention_count}}</text>
    </view>
  </view>
</template>

